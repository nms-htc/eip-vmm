<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <!-- resource library contracts configuration-->
        <resource-library-contracts>
            <contract-mapping>
                <url-pattern>/admin/*</url-pattern>
                <contracts>admin</contracts>
            </contract-mapping>
            <contract-mapping>
                <url-pattern>*</url-pattern>
                <contracts>default</contracts>
            </contract-mapping>
        </resource-library-contracts>
        <!-- resource bundle configuration -->
        <resource-bundle>
            <base-name>com.nms.i18n.Bundle</base-name>
            <var>msg</var>
        </resource-bundle>
        
        <!-- message bundle figuration -->
        <message-bundle>com.nms.i18n.Message</message-bundle>
        <!-- default location config -->
        <locale-config>
            <default-locale>vi</default-locale>
            <supported-locale>vi</supported-locale>
            <supported-locale>en_US</supported-locale>
        </locale-config>
    </application>
</faces-config>
